      ],
      "problemMatcher": []
    },
    {
      "label": "Bridge: Status",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/bridge_status.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "Bridge: Token Doctor (import-prices)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "./scripts/bridge_token_doctor.ps1"
      ],
      "problemMatcher": []
    }
  ]
