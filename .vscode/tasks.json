{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Codex: Dispatch last task",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        ".codex/dispatch_last_task.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "Bridge: Playlist (manual)",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/bridge_playlist.ps1",
